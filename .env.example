# Database Configuration
POSTGRES_DB=timeline_history
POSTGRES_USER=timeline_user
POSTGRES_PASSWORD=timeline_pass

# API Configuration
API_PORT=8000
OPEN_AI_API_KEY=

# JWT Authentication
API_JWT_SECRET=your-super-secret-jwt-key-change-in-production
API_TOKEN_TTL_SECONDS=900
API_RATE_LIMIT_PER_MINUTE=60
API_RATE_LIMIT_BURST=10

# Cookie Configuration (for production, set COOKIE_SECURE=true)
COOKIE_NAME=auth_token
COOKIE_SECURE=false
COOKIE_SAMESITE=Strict
COOKIE_DOMAIN=

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# pgAdmin (Postgres inspector UI)
PGADMIN_DEFAULT_EMAIL=admin@example.com
PGADMIN_DEFAULT_PASSWORD=admin
PGADMIN_PORT=5050
